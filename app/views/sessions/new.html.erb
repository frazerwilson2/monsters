<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

<div class="formRow">
      <%= f.label :name %>
      <%= f.text_field :name %>
<br/>
      <%= f.submit "Sign in", class: "action" %>
</div>
    <% end %>

    <p>New user? <%= link_to "Signup", users_new_path %></p>
  </div>
</div>